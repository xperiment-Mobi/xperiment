</TRIAL>

<TRIAL TYPE="Trial" block="3" order="fixed" trials="1">

	<addUrlVariable  _ip="notGiven" />

	<addText   x="50%" y="12%" height="20%"
	text = "some questions"
	timeStart="0"  width="80%" timeEnd="forever" fontSize="20"></addText> 
	
	<addText howMany="2" width="60" height="10%" x="20%" y="23%---40%" 
	text="sex---age"
	timeStart="0"  timeEnd="forever" autoSize="false" align="right" fontSize="20"/> 

 	<addMultipleChoice peg="sex" distanceApart="5" width="25%" height="10%" horizontalDistanceApart="210" 
 	labels="male,female"
 	x="50%" y="20%" timeStart="0"  timeEnd="forever" /> 	
	
	<addMultiNumberSelector peg="age" width="25%" height="20%" startingVal="00"  x="50%" y="40%" timeStart="0" timeEnd="forever" />

	<addComboBox peg="origin" 
	label="where do you come from?"
	timeStart="0" width="70%" height="40%" vertical="top" timeEnd="forever" x="50%" y="58%"/>
	
	<addInput text="what is your native language? Please type your answer into this box." timeStart="0" peg="language" height="7%" y="76%" width="70%"/>

	<behavNextTrial peg='nextTrial'/>
	
	<addButton timeStart='0' hideResults="true" width="340" goto='' height="40" peg='next' 
	text="next"
	if="this.click?this.text='please answer the questions',this.click&&language.result!=''&&origin.result!=''&&age.result!=''?nextTrial.start()"  
	timeEnd="forever" x="50%" vertical="top" y="90%"/>
</TRIAL>

<TRIAL TYPE="Trial" block="3" order="fixed" trials="1">

	<addText  height="10%" align="middle" y="23%" 
	text="how hungry are you? Please use the below scale to answer this question."
	timeStart="0"  timeEnd="forever" autoSize="false"  fontSize="30"/> 
	
	<addSlider lineColour="black" labelList="not at all huntry,very hungry" required=""/>


	<behavNextTrial peg='nextTrial'/>
	
	<addButton timeStart='0' hideResults="true" width="340" goto='' height="40" peg='next' 
	text="next"
	if="this.click?this.text='please answer the questions',this.click&&required==true?nextTrial.start()"  
	timeEnd="forever" x="50%" vertical="top" y="90%"/>
</TRIAL>

<TRIAL TYPE="Trial" hideResults="true" block="5"  trials="1">
	
	<addText  wordWrap="true" howMany="1" text="In this study you will see pairs of dishes containing scallops on each trial. Which dish do you prefer?---Note that the dishes on each trial contain the same amount of food and weigh the same."	timeStart="0" width="80%"  align="center" timeEnd="forever" fontSize="40" y="40%---60%"></addText>

<addButton timeStart='0' hideResults="true" width="340"  height="40" peg='next' 
	text="start"
	timeEnd="forever" x="50%" vertical="top" y="90%"/>
</TRIAL>


<TRIAL template="regularPlate,polygon,roundPlate,template"></TRIAL>
<TRIAL template="regularPlate,line,roundPlate,template"></TRIAL>
<TRIAL template="regularPlate,polygon,squarePlate,template"></TRIAL>
<TRIAL template="regularPlate,line,squarePlate,template"></TRIAL>

<TRIAL template="largePlate,polygon,roundPlate,template"></TRIAL>
<TRIAL template="largePlate,line,roundPlate,template"></TRIAL>
<TRIAL template="largePlate,polygon,squarePlate,template"></TRIAL>
<TRIAL template="largePlate,line,squarePlate,template"></TRIAL>


<line>
	<behavShapePattern copyOverID="p3" shape="v3" fillParentRatio=".36"  />
	<behavShapePattern copyOverID="p4" shape="v4" fillParentRatio=".55" />
	<behavResults copyOverID="results" foodShape="line"/>
</line>

<polygon>
	<behavShapePattern copyOverID="p3" shape="triangle"  />
	<behavShapePattern copyOverID="p4" shape="diamond" />
	<behavResults copyOverID="results" foodShape="poly"/>
</polygon>


<largePlate>
	<addJPG copyOverID="images1" width="50---50---50---50---50---320---320" height="50---50---50---50---50---320---320"/>
	<addJPG copyOverID="images2" width="42.10---42.10---42.10---42.10---42.10---320---320" height="42.10---42.10---42.10---42.10---42.10---320---320"/>
	<behavResults copyOverID="results" plateSize="large"/>
</largePlate>

<regularPlate>
	<behavResults copyOverID="results" plateSize="regular"/>
</regularPlate>



<roundPlate>
	<behavShapePattern copyOverID="p3" background="round1" hide="square1"/>
	<behavShapePattern copyOverID="p4" background="round2" hide="square2"/>
	<behavResults copyOverID="results" plateShape="round"/>
</roundPlate>

<squarePlate>
	<behavShapePattern copyOverID="p3" background="square1" hide="round1"/>
	<behavShapePattern copyOverID="p4" background="square2" hide="round2"/>
	<behavResults copyOverID="results" plateShape="diamond"/>
</squarePlate>

<template block="20" blockOrder="random" trials="1">

	<behavSwap peg="loc" usePegs="p3,p4" timeStart="0" />
	
	<behavResults copyOverID="results"/>
	
	<addText y="20%---80%" height="10%" howMany="1" width="100%" align="middle" text="Please click the plate of food you like more---These two plates contain the same amount of food and weigh the same"  timeStart="100" fontSize="40" />

	
	<addJPG smoothing="true" copyOverID="images1" howMany="7" peg="c1---c2---c3---c4---c5---round1---square1" extension="png" filename="1---2---3---4---5---roundPlate---squarePlate" timeStart="100" width="50---50---50---50---50---250---250" height="50---50---50---50---50---250---250"/>
	<addJPG smoothing="true" copyOverID="images2" howMany="7" peg="d1---d2---d3---d4---d5---round2---square2" extension="png" filename="1---2---3---4---5---roundPlate---squarePlate" timeStart="100" width="42.10---42.10---42.10---42.10---42.10---250---250" height="42.10---42.10---42.10---42.10---42.10---250---250"/>
	

	<behavShapePattern copyOverID="p3" peg="p3" usePegs="c1,c2,c3,c4,c5,square1,round1" x="30%" timeStart="100" width="250" height="250" fillParentRatio=".22"/>
	<behavShapePattern copyOverID="p4" peg="p4" usePegs="d1,d2,d3,d4,d5,square2,round2" x="70%" timeStart="100" width="250" height="250" fillParentRatio=".22"/>
	
	<behavSelect usePegs="p3,p4" timeStart="0" peg="select" if="this.onFinish?next.start()"/>
	<behavNextTrial peg="next" />
	
</template>
  	



