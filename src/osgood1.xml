<TRIAL block="10,2,3" template="tasteResponse,incongruent,template"><addText copyOverID="choices" /></TRIAL>	

<!-- good -->
<TRIAL block="10,3,1" template="instructions"><addJPG copyOverID="instruct" filename1="congruentShapes"/></TRIAL>	
<TRIAL block="10,3,2" template="shapeResponse,practice,congruent,template"><addJPG copyOverID="choices"  /></TRIAL>	
<TRIAL block="10,3,3" template="shapeResponse,congruent,template"><addJPG copyOverID="choices"  /></TRIAL>	

<!-- good -->
<TRIAL block="10,4,1" template="instructions"><addJPG copyOverID="instruct" filename1="incongruentShapes"/></TRIAL>	
<TRIAL block="-10,4,2" template="shapeResponse,practice,incongruent,template"><addJPG copyOverID="choices"  /></TRIAL>
<TRIAL block="10,4,3" template="shapeResponse,incongruent,template"><addJPG copyOverID="choices"  /></TRIAL>
	
	
	<instructions hideResults="true" trials="1">
		<addButton width="140" depth="top" key=" " timeStart="0" height="40"  text="continue (SPACE)"  vertical="bottom" y="100%"/>
		<addJPG exactSize="true" copyOverID="instruct" y="35%" filename="instructions_" extension="jpg" filename1="please set" />
		<addText text="There are 8 practice trials and then you will immediately start the experiment proper. During the practice trials you will given feedback as to whether your answer was right or wrong." y="80%" height="10%" fontSize="20" align="middle" colour="red" width="100%"/>
	</instructions>
	
	
	<practice trials="8">
		<addResults copyOverID="r" practice="1"  />
		<addText copyOverID="feedback" timeStart="end"  duration="500" />
	</practice>

	
	<shapeResponse>
		<addResults copyOverID="r" response="shape" />
		<addJPG copyOverID="choices" extension="jpg" filename="A1---R1;A1---R1;A2---R2;A2---R2;A3---R3;A3---R3;A4---R4;A4---R4" />
		<!-- <addJPG copyOverID="choices" extension="jpg" filename="A1---R1;R1---A1" /> -->
		<addText copyOverID="target" text="sweet;sweet;sour;sour" />
	</shapeResponse>



	<tasteResponse>
		<addResults copyOverID="r" response="taste" />
		<addText copyOverID="choices" text="sweet---sour"  />
		<addJPG copyOverID="target" extension="jpg" filename="A1;A1;R1;R1;A2;A2;R2;R2;A3;A3;R3;R3;A4;A4;R4;R4"/>
	</tasteResponse>
	
	
	
	<congruent>
		<choices copyOverID="choices" correct="0---1;1---0;1---0;0---1" />
		<addResults copyOverID="r" congruent="1" />
	</congruent>

	<incongruent>
		<choices copyOverID="choices" correct="1---0;0---1;0---1;1---0" />
		<addResults copyOverID="r" congruent="0" />
	</incongruent>
	
	
	
	
	<template order="random" trials="16">
		<behavRT timeStart="0" peg="rt"/>
		<addResults practice="0" copyOverID="r" ans="0" peg="r" if="this.doNow?r.choice1=a.choice,r.target1=target.target,r.choice1X=a.x" choiceID="1;2;3;4" />	
		<choices  exactSize="true" copyOverID="choices" howMany="2" peg="a---b" x="25%---75%;75%---25%" choice="1;2;3;4" correct="specify later" if="this.doNow?left.correct=this.correct---this.doNow?right.correct=this.correct" timeStart="0" align="middle" verticalAlign="middle" fontSize="60" colour="black"/> 
		<target depth="top" copyOverID="target" width="200" peg="target" timeStart="0" target="1;2;3;4" align="middle" verticalAlign="middle" fontSize="60" colour="black"/>
		<addButton copyOverID="keys" key="z---m" goto="" text="z---m" y="80%" timeStart="0" peg="left---right" correct="set later" vertical="bottom" x="25%---75%" width="150" height="80" enabled="false" keyEnabled="true" if="this.click&&this.correct=='1'?feedback.text='correct',r.ans=1" howMany="2"/>
		<addText copyOverID="feedback" peg="feedback" text="wrong" align="middle" duration="0" width="100%" fontSize="80"/>
		<addMoveToArea copyOverID="moveArea" movePeg="target" time="100" direction="x" useKeys="{left:'z',right:'m'}" useMouse="false" moveToMiddle="true" usePegs="target,a,b" if="this.onFinish?next.start(200)"/>
		<behavNextTrial peg="next" delay="200"/>
	</template>


	
	<TRIAL TYPE="Trial" hideResults="true" block="101" trials="1">
	
	<behavSaveData timeStart='0'/>
	<addText  wordWrap="true" text="Thank you for your participation to this study. We're exploring the way people associate shapes to tastes. In previous studies, we found that people associated angular shapes to sourness, and rounded shapes to sweetness. Still, when it comes to other tastes, depending on the shape, there seems to be less agreement. This is what you helped us assessing by taking part to this online experiment. 
If you have any questions or would like to here more about our research, please contact us at carlos.velasco@psy.oc.ac.uk or andy.woods@bristol.ac.uk
DO NOT FORGET TO ENTER THE BELOW CODE INTO MECHANICAL TURK."	y="10%" vertical="top" verticalAlign="top" timeStart="0" width="80%"  align="left" timeEnd="forever" fontSize="25"></addText>
		
	
	</TRIAL>

</expt>
	
	
	
	